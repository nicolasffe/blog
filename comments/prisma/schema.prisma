// comments/prisma/schema.prisma

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

// comments/prisma/schema.prisma
model Comment {
  id        String   @id @default(cuid())
  content   String
  createdAt DateTime @default(now())
  postId    String
  status    String   @default("pending")
  likes     Int      @default(0) // GARANTA QUE ESTA LINHA EXISTA
}